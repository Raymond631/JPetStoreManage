<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.jpetstore_manage.Mapper.UserMapper">

    <insert id="insertUser">
        insert into user_main (user_id,password) values (#{userId},#{password})
    </insert>

    <update id="updatePassword">
        update user_main set password = #{password} where user_id = #{userId}
    </update>

    <select id="selectUserById" resultType="com.example.jpetstore_manage.POJO.DataObject.UserMainDO">
        select * from user_main where user_id = #{userId}
    </select>

    <select id="selectUserByIdAndPwd" resultType="com.example.jpetstore_manage.POJO.DataObject.UserMainDO">
        select * from user_main where user_id = #{userId} and password = #{password}
    </select>

</mapper>